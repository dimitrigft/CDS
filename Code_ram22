import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Étape 1 : Encodage des variables catégorielles
df_encoded = pd.get_dummies(df_all_trim_1, drop_first=True)

# Étape 2 : Calcul de la matrice de corrélation
corr_matrix = df_encoded.corr()

# Étape 3 : Affichage graphique de la matrice
plt.figure(figsize=(20, 16))  # Taille ajustable selon ton écran
sns.heatmap(corr_matrix, cmap='coolwarm', center=0, linewidths=0.5)
plt.title("Matrice de Corrélation (toutes variables)", fontsize=16)
plt.tight_layout()
plt.show()
