%macro count_vars_sin_dgl;

    %do year = 2020 %to 2025;
        %do month = 1 %to 12;

            /* Arr√™t en juin 2025 */
            %if &year. = 2025 and &month. > 6 %then %goto fin;

            %let mm = %sysfunc(putn(&month., z2.));
            %let libname = DATE&mm.%substr(&year., 3, 2);

            /* V√©rifie si la table existe */
            %if %sysfunc(exist(&libname..SIN_DGL)) %then %do;

                /* Utilise PROC SQL pour compter le nombre de variables */
                proc sql noprint;
                    select count(*) into :nbvar
                    from dictionary.columns
                    where libname = upcase("&libname.")
                      and memname = "SIN_DGL";
                quit;

                %put üìä Table &libname..SIN_DGL contient &nbvar. variables.;

            %end;
            %else %do;
                %put ‚ö†Ô∏è Table &libname..SIN_DGL n‚Äôexiste pas.;
            %end;

        %end;
    %end;

%fin:
    %put ‚úÖ Fin du comptage des variables dans SIN_DGL.;

%mend count_vars_sin_dgl;

%count_vars_sin_dgl;
