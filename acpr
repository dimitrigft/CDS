# Récupérer tous les contrats dans le fold de test
test_contrats = set(groups.iloc[test_idx])

# Récupérer tous les contrats dans les folds de train/val
train_val_contrats = set(groups.iloc[train_idx_val])  # tu dois avoir cette variable

# Intersection
overlap = test_contrats.intersection(train_val_contrats)
print(f" Nombre de contrats communs entre train/val et test : {len(overlap)}")




